<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.MainPage">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Button Text="Load XML File" Clicked="OnLoadXmlClicked" />

        <Label Text="Select Analysis Method:" />
        <Picker x:Name="AnalysisPicker" Title="Choose Method">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>SAX</x:String>
                    <x:String>DOM</x:String>
                    <x:String>LINQ</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Button Text="Analyze" Clicked="OnAnalyzeClicked" />
        <Button Text="Transform to HTML" Clicked="OnTransformClicked" />
        <Button Text="Clear" Clicked="OnClearClicked" />

        <Label x:Name="OutputLabel" Text="Results will appear here..." />
    </VerticalStackLayout>
</ContentPage>